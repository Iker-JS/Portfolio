<%- include("header") -%>


<div class="box" id="heading">
    <h1><%= listTitle %></h1>
</div>


<div class="box">
    <% if (newListItems.length) { %>
        <% for (let i = 0; i < newListItems.length; i++) { %>

        <div class="item">
            <form action="/deleteTask/<%= i %>" method="post">
                    <p><input type="checkbox" onchange="this.form.submit()"/><%= newListItems[i] %></p>
            </form>
        </div>
        <% } %>
    <% } %>


    <form class="item" action="/" method="post">
        <input
            type="text"
            name="newItem"
            placeholder="New Item"
            autocomplete="off"
        />

        <button type="submit" name="list">+</button>
    </form>

    <div id="about">
        <a href="/about" aria-placeholder="about">about</a>
    </div>

</div>

<%- include("footer") -%>
